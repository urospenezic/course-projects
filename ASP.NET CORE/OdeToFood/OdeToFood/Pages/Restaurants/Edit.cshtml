@page "{restaurantId:int?}"
@model MyApp.Namespace.EditModel
@{
    ViewData["Title"] = "Edit Restaurant";
}

<h1>Editing @Model.Restaurant.Name</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Restaurant.Name" class="form-label"></label>
        <input asp-for="Restaurant.Name" class="form-control" />
        <span asp-validation-for="Restaurant.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Restaurant.Location" class="form-label"></label>
        <input asp-for="Restaurant.Location" class="form-control" />
        <span asp-validation-for="Restaurant.Location" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Restaurant.Cuisine" class="form-label"></label>
        <select asp-for="Restaurant.Cuisine" class="form-select" asp-items="Model.CuisineOptions">
            <option value="">-- Select Cuisine --</option>
        </select>
        <span asp-validation-for="Restaurant.Cuisine" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>